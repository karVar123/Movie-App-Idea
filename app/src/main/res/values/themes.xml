<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAppIdea" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/mainDarkBg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#F9FBE7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="movieImagesCornerRadius">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="movieTitleTextStyle">
        <item name="android:textColor">#F8F8F8</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_movieTitleTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="movieDescriptionTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabLayoutTextStyle">
        <item name="android:background">@color/mainBgLite</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="tabSelectedTextColor">@color/selectedTextColor</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabTextColor">@color/defaultTextColor</item>
    </style>

    <style name="setting_layout_bg">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:background">@drawable/setting_layout_bg</item>
    </style>

    <style name="setting_layout_bg.settingLayout_bg_small">
        <item name="android:layout_width">156dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/setting_layout_bg</item>
    </style>
</resources>