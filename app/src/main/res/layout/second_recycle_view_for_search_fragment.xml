<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/mainDarkBg">

    <ImageView
        android:id="@+id/movieImageOSecondRecyclerViewItem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/the_social_network" />


    <TextView
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TheImitation Game"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/movieImageOSecondRecyclerViewItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Action"
        android:textColor="#707373"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/movieImageOSecondRecyclerViewItem"
        app:layout_constraintTop_toBottomOf="@+id/movieName" />

    <TextView
        android:id="@+id/ratingInStar"
        android:layout_marginTop="15dp"
        android:layout_width="30dp"
        android:layout_marginStart="15dp"
        android:text="4.0"
        android:textColor="#929797"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/movieImageOSecondRecyclerViewItem"
        app:layout_constraintTop_toBottomOf="@+id/movieStyle" />

    <ImageView
        android:id="@+id/ratingOfMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/ratingInStar"
        app:layout_constraintStart_toEndOf="@+id/ratingInStar"
        app:layout_constraintTop_toTopOf="@+id/ratingInStar" />

</androidx.constraintlayout.widget.ConstraintLayout>